html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(name='viewport', content='width=device-width')
    link(rel='icon', type='image/png', href='assets/img/favicon.ico')

    title DevOps Portal

    // Bootstrap core CSS
    link(href='assets/css/bootstrap.min.css', rel='stylesheet')
    link(href='https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css', rel='stylesheet')

    // Animation library for notifications
    link(href='assets/css/animate.min.css', rel='stylesheet')

    // Light Bootstrap Table core CSS
    link(href='assets/css/light-bootstrap-dashboard.css', rel='stylesheet')

    // Fonts and icons
    link(href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Roboto:400,700,300', rel='stylesheet', type='text/css')
    link(href='assets/css/pe-icon-7-stroke.css', rel='stylesheet')

    link(rel="stylesheet", href="custom.css")
  body
    .wrapper
      .sidebar(data-color='gray', data-image='assets/img/sidebar-wrench.jpg')
        //
          Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
          Tip 2: you can also add an image using data-image tag
        .sidebar-wrapper
          .logo
            a.simple-text(href='https://uti.edu')
              | UTI DevOps
          ul.nav
            li.active
              a(href='dashboard.html')
                i.pe-7s-graph
                p Dashboard
      .main-panel
        nav.navbar.navbar-default.navbar-fixed
          .container-fluid
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='#') Dashboard
            .collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-left
                li
                  //- a.dropdown-toggle(href='#', data-toggle='dropdown')
                  //-   i.fa.fa-dashboard
              ul.nav.navbar-nav.navbar-right
                //- li
                //-   a(href='')
                //-     | Account
        .content
          .container-fluid
            .row
              .col-md-12.server-management
                .card
                  .header
                    h4.title Server Management
                    p.category Turn servers on or off in real time
                  .content
                    .table-full-width
                      table.table
                        tbody
                          tr
                            td Toggle Server 1
                            td.td-actions.text-right
                              input(type='checkbox', checked, data-toggle='toggle', data-onstyle="success", data-server="1").server-toggle
                          tr
                            td Toggle Server 2
                            td.td-actions.text-right
                              input(type='checkbox', checked, data-toggle='toggle', data-onstyle="success", data-server="2").server-toggle
                          tr
                            td Toggle Server 3
                            td.td-actions.text-right
                              input(type='checkbox', checked, data-toggle='toggle', data-onstyle="success", data-server="3").server-toggle
                          tr
                            td Toggle Server 4
                            td.td-actions.text-right
                              input(type='checkbox', checked, data-toggle='toggle', data-onstyle="success", data-server="4").server-toggle
                    //- .footer
                    //-   hr
                    //-   .stats
                    //-     i.fa.fa-history
                    //-     span Updated: 3 minutes ago
        footer.footer
          .container-fluid
            nav.pull-left
              ul
                li
                  a(href='#')
                    | Home
            p.copyright.pull-right
              | Last Accessed: 
              span#last-accessed= last_accessed
              
  // Core JS Files
  script(src='assets/js/jquery-1.10.2.js', type='text/javascript')
  script(src='assets/js/bootstrap.min.js', type='text/javascript')
  script(src='https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js')

  // Checkbox, Radio & Switch Plugins
  script(src='assets/js/bootstrap-checkbox-radio-switch.js')

  // Charts Plugin
  script(src='assets/js/chartist.min.js')

  // Notifications Plugin
  script(src='assets/js/bootstrap-notify.js')

  // Google Maps Plugin
  script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?sensor=false')

  // Light Bootstrap Table Core javascript and methods for Demo purpose
  script(src='assets/js/light-bootstrap-dashboard.js')

  // Light Bootstrap Table DEMO methods, don't include it in your project!
  script(src='assets/js/demo.js')
  script(src='/socket.io/socket.io.js')
  script(src='./main.js')
